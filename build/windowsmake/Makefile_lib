include config_win.mk

SRC_PATH := ../../src
OBJS_DIR:= ./objs

SRCS := $(wildcard $(SRC_PATH)/*c)
OBJS := $(subst .c,.o, $(SRCS))
LIB_NAME := $(LIB_DIR)/libAVSample.lib $(LIB_DIR)/libAVSample.dll

VER = xxx.ver

DLL_EXPORT_SYMBOL	:= ./symbols.t
DLL_DEF	:= ./win_dll_symexp.def  					  #模块定义文件def
DLL_IMPLIB	:= $(LIB_DIR)/libAVSample_imp.lib #引导库
DLL_PDB	:= $(LIB_DIR)/libAVSample.pdb
OUT_PDB	:= -debug -PDB:$(DLL_PDB)


#设置搜索目录
vpath	%.c  $(SRC_PATH)  $(SRC_PATH)/x86   $(SRC_PATH)/../utils/   $(SRC_PATH)/../utils/x86
vpath	%.asm  $(SRC_PATH)/x86   $(SRC_PATH)/../utils/x86
vpath	%.h  $(SRC_PATH)  $(SRC_PATH)/x86  $(SRC_PATH)/../utils/   $(SRC_PATH)/../utils/x86

#设置编译链接参数
CFLAGS  := $(EXTRA_CFLAGS)
CFLAGS	+= -Dstrtod=avpriv_strtod -Dsnprintf=avpriv_snprintf -D_snprintf=avpriv_snprintf -Dvsnprintf=avpriv_vsnprintf
LDFLAGS := $(EXTRA_LDFLAGS)
RCFLAGS := $(EXTRA_RCFLAGS)
ASMFLAGS := $(EXTRA_SFLAGS)
ARFLAGS :=	

CFLAGS += -I. -I$(SRC_PATH)
ASMFLAGS += -I. -I$(SRC_PATH)

#获取需要编译的OBJS
C_SRCS:= $(wildcard $(SRC_PATH)/*.c) $(wildcard $(SRC_PATH)/x86/*.c)
C_SRCS+= $(wildcard $(SRC_PATH)/../utils/*.c) 
A_SRCS		:= $(wildcard $(SRC_PATH)/x86/*.asm) 
A_SRCS		+= $(wildcard $(SRC_PATH)/../utils/x86/*.asm) 

C_OBJS		:= $(subst .c,.o, $(C_SRCS))  
A_OBJS		:= $(subst .asm,.o, $(A_SRCS))  
OBJS		:= $(filter-out %x86inc.o %x86util.o %emms.o %cpuid.o, $(C_OBJS) $(A_OBJS))
OBJS_PREFIX	:= $(addprefix $(OBJS_DIR)/, $(notdir $(OBJS)))

ifeq ($(platform), win32)
OBJS := $(filter-out %transpose_x86_64.o,  $(OBJS))
endif

ifeq ($(platform), x64)
OBJS := $(filter-out %transpose_x86_32.o,  $(OBJS))
endif

#编译输出
OUT = -out
LIBRARY_STATIC = $(OUT):$(filter %.lib, $LIB_NAME))
LIBRARY_SHARD = $(OUT):$(filter %.dll, $LIB_NAME))

.PHONY: all clean
all: $(LIB_NAME)
$(filter %.lib, $(LIB_NAME)) : $(OBJS)
	$(AR) $(LIBRARY_STATIC) $(OBJS)
$(filter %.dll, $(LIB_NAME)) : $(OBJS)	
#	makedef $(VER) $(OBJS) > $(DLL_DEF)	
#	SubWCRev ../../ ./win_dll_info.t ./win_dll_info.rc
	$(RC) $(RCFLAGS) -fo $(OBJS_DIR)/win_dll_info.res enc_dll.rc
	$(LD) -dll -def:$(DLL_DEF) -implib: $(DLL_IMPLIB) $(LIBRARY_SHARD) $(OBJS) $(OBJS_DIR)/win_dll_info.res/enc_dll.res $(OUTPDB)
	
%.obj:%.c
#	$(error $(OBJS))
	$(CC)    $(CFLAGS) $< -Fo $@
%.o:%.asm
	$(ASM)  $(ASMFLAGS) $< -o $@
clean:
	rm -f $(OBJS) $(LIB_NAME) $(DLL_IMPLIB) $(DLL_PDB) 

